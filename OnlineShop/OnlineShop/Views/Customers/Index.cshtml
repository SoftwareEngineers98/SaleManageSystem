@model IEnumerable<OnlineShop.Models.Customer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" width="1000" border="1" >
        
        <tr>
      
           <td hight ="200" align="center"> @Html.DisplayNameFor(model => model.Person.Id) </td>
           
            <td hight="200" align="center">
                @Html.DisplayNameFor(model => model.Type)
            </td>
            <td hight="200" align="center">
                @Html.DisplayNameFor(model => model.Image)
            </td>

</tr>
    
    @foreach (var item in Model) {
        <tr>
            <td hight="200" align="center">
                @Html.DisplayFor(modelItem => item.Person.Id)
            </td>
            <td hight="200" align="center">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td hight="200" align="center">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
